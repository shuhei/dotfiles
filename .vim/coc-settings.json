// This configuration file supports comments (jsonc).
{
  "coc.preferences.formatOnSaveFiletypes": [
    "c",
    "cpp",
    "dart",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "java",
    "json",
    "jsonc",
    "json5",
    "css",
    "markdown",
    "rust",
    "python"
  ],
  // Gives more time to slow formatters like black for Python.
  "coc.preferences.willSaveHandlerTimeout": 1500,
  "java.errors.incompleteClasspath.severity": "ignore",
  "python.pythonPath": "/opt/homebrew/bin/python3",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/opt/homebrew/bin/black",
  "python.formatting.autopep8Path": "/opt/homebrew/bin/autopep8"
}
